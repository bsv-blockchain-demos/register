{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ES2020", "dom"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true,
        "downlevelIteration": true,
        "skipLibCheck": true
    }
}